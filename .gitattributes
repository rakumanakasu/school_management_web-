# Handle line endings automatically
* text=auto

# Force LF for source files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.sh text eol=lf
*.gradle text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.swift text eol=lf
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf

# Binary files (do not change line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.otf binary
*.ttf binary
*.woff binary
*.woff2 binary
*.pdf binary
*.apk binary
*.aab binary
